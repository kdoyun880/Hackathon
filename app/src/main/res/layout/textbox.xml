<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="200dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text=""
            />
        <TextView
            android:id="@+id/txt2"
            android:paddingBottom="50dp"
            android:layout_toRightOf="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="님, 아래 질병 중"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_below="@+id/txt"
            android:paddingBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="자신에게 해당되는 것을 선택하세요."
            />
        <!--  당뇨, 고혈압, 위염/위궤앙, 장염 -->
        <CheckBox
            android:layout_below="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당뇨"
            android:id="@+id/check1"/>
        <CheckBox
            android:layout_below="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고혈압"
            android:id="@+id/check2"/>
        <CheckBox
            android:layout_below="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위염/위궤양"
            android:id="@+id/check3"/>
        <CheckBox
            android:layout_below="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장염"
            android:id="@+id/check4"/>
        <CheckBox
            android:layout_below="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고지혈증"
            android:id="@+id/check5"/>

        <Button
            android:id="@+id/list_btn"
            android:layout_below="@+id/check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



</LinearLayout>
